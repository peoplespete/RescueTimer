
<h1>Vice Dashboard</h1>
<h2>Vice Manager</h2>
<a class='btn btn-success' href='/vices/new'>Add a vice</button></a>
<ul class="list-group">
  <% @vices.each do |vice| %>
    <li class="list-group-item">
      <span class="name"><%= vice.name %></span>
      <span class="category"><%= vice.category %></span>
      <button class="btn btn-small btn-danger">
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
      <%= button_to "delete", vice_path(:id => vice.id), :method => :delete, :class =>"glyphicon glyphicon-remove" %>
      </button>
    </li>
  <% end %>
</ul>

<h2>Time Manager</h2>
<div><span>Weekly Allotment:</span><span id="total"><%= @total %></span></div>
<div><span>Remaining Allotment:</span><span id="remaining"><%= @remaining %></span></div>
